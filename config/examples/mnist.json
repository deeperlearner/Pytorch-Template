{
    "n_gpu": 1,
    "name": "Mnist_LeNet",

    "datasets": {
        "data": {
            "module": "mnist_loader",
            "type": "MyDataset",
            "args": {
                "data_paths": {
                    "train_dir": "./data",
                    "valid_dir": null,
                    "test_dir": null,
                    "train_label": null,
                    "valid_label": null,
                    "test_label": null
                }
            }
        }
    },
    "data_loaders": {
        "data": {
            "module": "mnist_loader",
            "type": "MyDataLoader",
            "args": {
                "validation_split": 0.2,
                "DataLoader_args": {
                    "batch_size": 128,
                    "shuffle": true,
                    "num_workers": 2
                }
            }
        }
    },
    "models": {
        "model": {
            "module": "model",
            "type": "LeNet",
            "args": {
            }
        }
    },
    "losses": {
        "model": {
            "type": "nll_loss",
            "args": {
            }
        }
    },
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "optimizers": {
        "model": {
            "type": "Adam",
            "args": {
                "lr": 0.001
            }
        }
    },
    "lr_schedulers": {
        "model": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        }
    },
    "trainer": {
        "module": "trainer",
        "type": "Trainer",
        "args": {
            "epochs": 2,
            "len_epoch": null,

            "save_period": 1,
            "verbosity": 2,

            "monitor": "min val_loss",
            "early_stop": 10,

            "tensorboard": true
        }
    },
    "save_dir": "saved/",
    "log_config": "logger/logger_config.json"
}
