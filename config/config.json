{
    "name": "VAE",
    "data_loader": {
        "type": "ImageDataLoader",
        "args": {
            "train_dir": "$DLCV_path/hw3-deeperlearner/hw3_data/face/train",
            "test_dir": "$DLCV_path/hw3-deeperlearner/hw3_data/face/test",
            "label_dir": "$DLCV_path/hw3-deeperlearner/hw3_data/face",
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "arch": {
        "type": "VAE",
        "args": {
        }
    },
    "loss": "vae_loss",
    "metrics": [
    ],
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0001
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "n_gpu": 1,
    "trainer": {
        "type": "vae",
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": true
    }
}
