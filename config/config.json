{
    "name": "EXP0",
    "data_loader": {
        "type": "MyDataLoader",
        "args": {
            "batch_size": 64,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "arch": {
        "type": "VGG16",
        "args": {
            "feature_extracting": true
        }
    },
    "loss": "CELoss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "n_gpu": 1,
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 2,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboard": true
    }
}
