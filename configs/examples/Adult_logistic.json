{
    "n_gpu": 1,
    "root_dir": "./",
    "name": "Adult_logistic",
    "k_fold": 1,

    "datasets": {
        "imbalanced": true,
        "train": {
            "data": {
                "module": ".examples.Adult_dataset",
                "type": "AdultDataset",
                "kwargs": {
                    "data_dir": "./data/Adult",
                    "mode": "train"
                }
            }
        },
        "valid": {
        },
        "test": {
            "data": {
                "module": ".examples.Adult_dataset",
                "type": "AdultDataset",
                "kwargs": {
                    "data_dir": "./data/Adult",
                    "mode": "test"
                }
            }
        }
    },
    "data_loaders": {
        "train": {
            "data": {
                "module": ".imbalanced_loader",
                "type": "ImbalancedDataLoader",
                "kwargs": {
                    "validation_split": 0.2,
                    "DataLoader_kwargs": {
                        "batch_size": 64,
                        "shuffle": true,
                        "num_workers": 4
                    },
                    "do_transform": true
                }
            }
        },
        "valid": {
        },
        "test": {
            "data": {
                "module": ".imbalanced_loader",
                "type": "ImbalancedDataLoader",
                "kwargs": {
                    "DataLoader_kwargs": {
                        "batch_size": 64,
                        "shuffle": false,
                        "num_workers": 4
                    },
                    "do_transform": true
                }
            }
        }
    },
    "models": {
        "model": {
            "module": ".examples.logistic",
            "type": "LogisticRegression",
            "kwargs": {
                "in_features": 105
            }
        }
    },
    "losses": {
        "loss": {
            "is_ftn": true,
            "type": "binary_focal_loss"
        }
    },
    "metrics": {
        "per_iteration": ["binary_accuracy"],
        "per_epoch": ["TPR", "PPV", "AUROC", "AUPRC"],
        "pick_threshold": {
            "is_ftn": true,
            "type": "Youden_J",
            "kwargs": {
                "beta": 1.0
            }
        }
    },
    "optimizers": {
        "model": {
            "type": "SGD",
            "kwargs": {
                "lr": 0.001
            }
        }
    },
    "lr_schedulers": {
        "model": {
            "type": "StepLR",
            "kwargs": {
                "step_size": 50,
                "gamma": 0.1
            }
        }
    },
    "trainer": {
        "module": ".trainer",
        "type": "Trainer",
        "kwargs": {
            "apex": false,

            "finetune": false,
            "epochs": 2,
            "len_epoch": null,

            "save_period": 5,
            "save_the_best": true,
            "verbosity": 2,

            "monitor": "max val_binary_accuracy",
            "early_stop": 10,

            "tensorboard": false
        }
    }
}
