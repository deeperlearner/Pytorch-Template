{
    "n_gpu": 1,
    "root_dir": "./",
    "name": "Adult_logistic",
    "optuna": true,

    "datasets": {
        "train": {
            "data": {
                "module": ".examples.Adult_loader",
                "type": "AdultDataset",
                "kwargs": {
                    "data_dir": "./data/Adult",
                    "mode": "train"
                }
            }
        },
        "valid": {
        },
        "test": {
            "data": {
                "module": ".examples.Adult_loader",
                "type": "AdultDataset",
                "kwargs": {
                    "data_dir": "./data/Adult",
                    "mode": "test"
                }
            }
        }
    },
    "data_loaders": {
        "train": {
            "data": {
                "module": ".examples.Adult_loader",
                "type": "BaseDataLoader",
                "kwargs": {
                    "validation_split": 0.2,
                    "DataLoader_kwargs": {
                        "batch_size": 64,
                        "shuffle": true,
                        "num_workers": 4
                    },
                    "do_transform": true
                }
            }
        },
        "valid": {
        },
        "test": {
            "data": {
                "module": ".examples.Adult_loader",
                "type": "DataLoader",
                "kwargs": {
                    "batch_size": 64,
                    "shuffle": false,
                    "num_workers": 4
                },
                "do_transform": true
            }
        }
    },
    "models": {
        "model": {
            "module": ".examples.logistic",
            "type": "LogisticRegression",
            "kwargs": {
                "in_features": 105
            }
        }
    },
    "losses": {
        "loss": {
            "is_ftn": true,
            "type": "binary_focal_loss"
        }
    },
    "metrics": {
        "per_iteration": ["binary_accuracy"],
        "per_epoch": ["AUROC", "AUPRC"]
    },
    "optimizers": {
        "model": {
            "type": "SGD",
            "kwargs": {
                "lr": 0.001
            }
        }
    },
    "lr_schedulers": {
        "model": {
            "type": "StepLR",
            "kwargs": {
                "step_size": 50,
                "gamma": 0.1
            }
        }
    },
    "trainer": {
        "module": ".trainer",
        "type": "Trainer",
        "k_fold": 1,
        "fold_idx": 0,
        "kwargs": {
            "apex": true,

            "finetune": false,
            "epochs": 2,
            "len_epoch": null,

            "save_period": 5,
            "save_the_best": true,
            "verbosity": 2,

            "monitor": "max val_binary_accuracy",
            "early_stop": 10,

            "tensorboard": true
        }
    }
}
