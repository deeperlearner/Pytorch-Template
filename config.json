{
    "dataset": {
        "type": "MyDataset",
        "args": {
            "data_dir": "../hw2_data/p1_data"
        }
    },
    "data_loader": {
        "type": "MyDataLoader",
        "args": {
            "batch_size": 64,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "model": {
        "type": "VGG16",
        "args": {}
    },
    "loss": "cross-entropy",
    "optimizer":
        "type": "Adam",
        "args": {
            "lr": 0.001
        },
    "trainer": {
        "epochs": 1000,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
